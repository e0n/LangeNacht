<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentCarGroup"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/carGroupCurrentGroupIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:text="@string/currentCarGroupId" />

    <TextView
        android:id="@+id/currentCarGroupIdEntryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:text="@string/id" />

    <Button
        android:id="@+id/joinCarGroupButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/carGroupCurrentGroupIdTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="@string/joinGroup" />

    <Button
        android:id="@+id/leaveCarGroupButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/joinCarGroupButton"
        android:layout_below="@+id/joinCarGroupButton"
        android:layout_marginTop="35dp"
        android:text="@string/leaveGroup" />

    <Button
        android:id="@+id/createCarGroupButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/leaveCarGroupButton"
        android:layout_below="@+id/leaveCarGroupButton"
        android:layout_marginTop="35dp"
        android:text="@string/createGroup" />

</RelativeLayout>
